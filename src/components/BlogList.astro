---
import BlogPost from "./BlogPost.astro";

const { posts } = Astro.props;
---
<style>
  ul{
    list-style: none;
    display: flex;
    flex-wrap: wrap;
  }
  @media (max-width: 710px) {
    ul{
      display: block;
      padding: 0;
    }
  }

</style>
<ul id="posts">
  {posts.map((content) => <BlogPost content={content} />)}
</ul>
